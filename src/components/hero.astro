---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div style="max-width: 200px" class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[100, 400, 600]}
      aspectRatio="contain"
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tight">
      Lær kode, spill Robi
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Robi er bygd av ekte utviklere, slik at du kan starte å lære deg koding.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/blog"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-rocket" />

        Start å spille
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/blog"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxs-dog" />
        Utforsk brettene
      </Link>
    </div>
  </div>
</main>
